<% if flash[:notice] %>
  <p class = "notice"><%= flash[:notice] %></p>
<% end %>
<% if flash[:alert] %>
  <p class = "alert"><%= flash[:alert] %></p>
<% end %>
<h1 class="title">レストラン一覧</h1>
<table class="box">
  <thead>
    <tr>
      <th>レストラン名</th>
      <th>カテゴリー</th>
      <th>削除</th>
    </tr>
  </thead>
  <tbody>
    <% @restaurants.each do |restaurant| %>
    <tr>
      <td><%= link_to restaurant.name, restaurant %></td>
      <td><%= restaurant.category %></td>
      <td><%= link_to "削除", restaurant, method: :delete, data: {confirm: "本当に削除しますか？"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "レストランの新規登録", new_restaurant_path, style: "margin:3%" %>
