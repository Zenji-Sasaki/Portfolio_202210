<%= render 'layouts/flash_messages' %>
<div class="register">
  <h1 class="register-title">商品登録</h1>
  <%= form_with model: @product do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <%= f.hidden_field :restaurant_id, value: @restaurant.id %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  <table class="register-box">
    <tr>
      <th><%= f.label :name , "商品名" %></th>
      <td><%= f.text_field :name, style: "width:80%", placeholder: "商品名を入力" %></td>
    </tr>
    <tr>
      <th><%= f.label :category , "カテゴリー" %></th>
      <td>
        <%= f.select :category,
        [["ハンバーガー", "ハンバーガー"],
        ["チキン", "チキン"],
        ["ラーメン", "ラーメン"],
        ["そば", "そば"],
        ["うどん", "うどん"],
        ["カレー", "カレー"],
        ["丼もの", "丼もの"],
        ["中華", "中華"],
        ["寿司", "寿司"],
        ["その他", "その他"]],
      include_blank: "選択してください" %>
      </td>
    </tr>
    <tr>
      <th><%= f.label :image , "商品画像" %></th>
      <td><%= f.file_field :image, style: "font-size: 15px; width: 80%" %></td>
    </tr>
  </table>
  <%= f.submit "商品を登録する", class: "btn btn-primary btn-custom" %>
  <% end %>
  <%= render 'layouts/home_link' %>
</div>

